<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/glass_dp_16"
    android:layout_marginStart="@dimen/glass_dp_16"
    android:layout_marginEnd="@dimen/glass_dp_16">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ble_search_bg"
        android:contentDescription="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/image_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_40"
        android:src="@mipmap/ble_glasses_search"
        android:contentDescription="@string/app_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/glass_sp_24"
        android:textStyle="bold"
        android:textColor="@color/ble_text_3"
        android:gravity="start"
        android:id="@+id/rcv_device_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_30"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_1"/>
    <TextView
        android:textSize="@dimen/glass_sp_12"
        android:textColor="@color/ble_text_4"
        android:gravity="start"
        android:id="@+id/rcv_device_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_10"
        android:layout_marginBottom="@dimen/glass_dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rcv_device_name"/>
    <TextView
        android:textSize="@dimen/glass_sp_14"
        android:textColor="@color/ble_text_1"
        android:gravity="center"
        android:id="@+id/rcv_tv_connect"
        android:background="@mipmap/ble_btn_connect_bg"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/glass_dp_50"
        android:layout_marginTop="@dimen/glass_dp_10"
        android:layout_marginBottom="@dimen/glass_dp_30"
        android:text="@string/ble_glass_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
