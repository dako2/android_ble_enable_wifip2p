<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/g_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_bar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cls_device"
                android:background="@drawable/main_setting_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_24"
                android:minHeight="@dimen/glass_dp_60"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/g_feedback_1"
                    android:drawableLeft="@mipmap/ic_feedback_devices"
                    android:drawablePadding="@dimen/glass_dp_12"
                    android:layout_marginStart="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_12"
                    android:textColor="@color/color_A8A8A8"
                    android:id="@+id/tv_device_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/glass_dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_arrow2"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="@dimen/glass_dp_20"/>
                <ImageView
                    android:id="@+id/iv_arrow2"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_enter_gray"
                    android:contentDescription="@string/app_image_desc"
                    android:layout_marginEnd="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cls_feedback_type"
                android:background="@drawable/main_setting_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_12"
                android:minHeight="@dimen/glass_dp_60"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintTop_toBottomOf="@+id/cls_device">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_6"
                    android:id="@+id/tv_type_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_140"
                    android:text="@string/g_feedback_2"
                    android:drawableLeft="@mipmap/ic_feedback_doctum"
                    android:drawablePadding="@dimen/glass_dp_12"
                    android:layout_marginStart="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_12"
                    android:textColor="@color/color_A8A8A8"
                    android:id="@+id/tv_type_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_100"
                    android:singleLine="true"
                    android:layout_marginEnd="@dimen/glass_dp_10"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@+id/iv_arrow3"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_goneMarginEnd="@dimen/glass_dp_20"/>
                <ImageView
                    android:id="@+id/iv_arrow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_enter_gray"
                    android:contentDescription="@string/app_image_desc"
                    android:layout_marginEnd="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <TextView
        android:textSize="@dimen/glass_sp_14"
        android:textColor="@color/g_black"
        android:gravity="center"
        android:id="@+id/tv_confirm"
        android:background="@mipmap/btn_bg_screen"
        android:layout_width="0dp"
        android:layout_height="@dimen/glass_dp_50"
        android:layout_marginTop="@dimen/glass_dp_100"
        android:layout_marginBottom="@dimen/glass_dp_50"
        android:text="@string/h_glass_274"
        android:layout_marginStart="@dimen/glass_dp_16"
        android:layout_marginEnd="@dimen/glass_dp_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
