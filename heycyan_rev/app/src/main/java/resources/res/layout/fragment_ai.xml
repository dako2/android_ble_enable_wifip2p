<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/g_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/glass_sp_22"
        android:textStyle="bold"
        android:textColor="@color/g_color_common_1"
        android:ellipsize="marquee"
        android:gravity="center"
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_16"
        android:maxWidth="@dimen/glass_dp_200"
        android:text="@string/h_glass_124"
        android:singleLine="true"
        android:layout_centerInParent="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_chat_language"
        android:padding="@dimen/glass_dp_6"
        android:visibility="visible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_ai_chat_language"
        android:layout_marginEnd="@dimen/glass_dp_8"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintRight_toLeftOf="@+id/iv_edit"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"/>
    <ImageView
        android:id="@+id/iv_edit"
        android:padding="@dimen/glass_dp_8"
        android:layout_width="@dimen/glass_dp_34"
        android:layout_height="@dimen/glass_dp_34"
        android:src="@mipmap/picture_edit"
        android:contentDescription="@string/app_name"
        android:layout_marginEnd="@dimen/glass_dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"/>
    <TextView
        android:textSize="@dimen/glass_sp_14"
        android:textColor="@color/color_click"
        android:id="@+id/tv_edit_finish"
        android:padding="@dimen/glass_dp_6"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/h_glass_305"
        android:layout_marginEnd="@dimen/glass_dp_6"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitle"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tvTitle"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/glass_dp_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTitle">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_no_data"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/glass_dp_72"
            android:src="@mipmap/ai_no_data"
            android:contentDescription="@string/app_image_desc"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/glass_sp_18"
            android:textColor="@color/g_color_common_1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/tv_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/glass_dp_16"
            android:maxWidth="@dimen/glass_dp_200"
            android:text="@string/h_glass_125"
            android:layout_marginStart="@dimen/glass_dp_16"
            android:layout_marginEnd="@dimen/glass_dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivImage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/no_bind_device"
        android:background="@color/g_bg_color"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_ai_no_bind_bg"
            android:contentDescription="@string/app_image_desc"/>
        <TextView
            android:textSize="@dimen/glass_sp_22"
            android:textStyle="bold"
            android:textColor="@color/g_color_common_1"
            android:ellipsize="marquee"
            android:gravity="center"
            android:id="@+id/tvTitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/glass_dp_16"
            android:maxWidth="@dimen/glass_dp_200"
            android:text="@string/h_glass_124"
            android:singleLine="true"
            android:layout_centerInParent="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_to_bind"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle2">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@+id/guideLine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.5"/>
                <androidx.constraintlayout.widget.Guideline
                    android:orientation="vertical"
                    android:id="@+id/guideLineRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintGuide_percent="0.7"/>
                <TextView
                    android:textSize="@dimen/glass_sp_18"
                    android:textStyle="bold"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_control_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_10"
                    android:text="@string/g_glasses_bind_1"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/iv_control"/>
                <TextView
                    android:textSize="@dimen/glass_sp_10"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_2"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/g_glasses_bind_2"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/tv_control_hint"/>
                <ImageView
                    android:id="@+id/iv_control"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_100"
                    android:src="@mipmap/ic_ai_nobind_1"
                    android:layout_marginEnd="@dimen/glass_dp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_18"
                    android:textStyle="bold"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_catch_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_10"
                    android:text="@string/g_glasses_bind_3"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/iv_catch"/>
                <TextView
                    android:textSize="@dimen/glass_sp_10"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_catch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_2"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/g_glasses_bind_4"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/tv_catch_hint"/>
                <ImageView
                    android:id="@+id/iv_catch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_72"
                    android:src="@mipmap/ic_ai_nobind_2"
                    android:layout_marginStart="@dimen/glass_dp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/tv_control"/>
                <TextView
                    android:textSize="@dimen/glass_sp_18"
                    android:textStyle="bold"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_note_hint"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_10"
                    android:text="@string/g_glasses_bind_5"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/iv_note"/>
                <TextView
                    android:textSize="@dimen/glass_sp_10"
                    android:textColor="@color/g_white"
                    android:gravity="center"
                    android:id="@+id/tv_note"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/glass_dp_2"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/g_glasses_bind_6"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/tv_note_hint"/>
                <ImageView
                    android:id="@+id/iv_note"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:src="@mipmap/ic_ai_nobind_3"
                    android:layout_marginEnd="@dimen/glass_dp_12"
                    app:layout_constraintLeft_toLeftOf="@+id/guideLine"
                    app:layout_constraintRight_toRightOf="@+id/guideLine"
                    app:layout_constraintTop_toBottomOf="@+id/tv_catch"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <TextView
            android:textSize="@dimen/glass_sp_14"
            android:textColor="@color/g_btn_submit_color"
            android:gravity="center"
            android:id="@+id/tv_to_bind"
            android:background="@mipmap/btn_bg_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/glass_dp_120"
            android:text="@string/h_glass_92"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:textColor="@color/color_click"
            android:id="@+id/tv_no_data_hint"
            android:padding="@dimen/glass_sp_6"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_to_bind"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
