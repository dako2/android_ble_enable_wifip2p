<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingTop="@dimen/glass_dp_8"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_checked"
        android:layout_width="@dimen/glass_dp_22"
        android:layout_height="@dimen/glass_dp_22"
        android:src="@drawable/chat_check_selector"
        android:contentDescription="@string/app_image_desc"
        android:layout_marginStart="@dimen/glass_dp_16"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <VideoView
        android:id="@+id/videoMessage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="@dimen/glass_dp_36"
        app:layout_constraintLeft_toRightOf="@+id/iv_checked"
        app:layout_constraintTop_toTopOf="@+id/iv_checked"
        app:layout_goneMarginStart="@dimen/glass_dp_36"/>
</androidx.constraintlayout.widget.ConstraintLayout>
