<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="@dimen/glass_dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/glass_dp_120"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:src="@mipmap/ic_common_dialog_bg"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round="@dimen/glass_dp_16"/>
        <TextView
            android:textSize="@dimen/glass_sp_18"
            android:textColor="@color/color_121212"
            android:gravity="center"
            android:id="@+id/tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/glass_dp_26"
            android:text="@string/h_glass_218"
            android:maxLines="2"
            android:layout_marginStart="@dimen/glass_dp_12"
            android:layout_marginEnd="@dimen/glass_dp_12"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_close"
            android:padding="@dimen/glass_dp_4"
            android:visibility="gone"
            android:layout_width="@dimen/glass_dp_24"
            android:layout_height="@dimen/glass_dp_24"
            android:layout_marginTop="@dimen/glass_dp_22"
            android:src="@mipmap/ic_dialog_close_white"
            android:contentDescription="@string/app_image_desc"
            android:layout_marginEnd="@dimen/glass_dp_12"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="@dimen/glass_sp_14"
            android:textColor="@color/color_121212"
            android:gravity="center_horizontal"
            android:id="@+id/tv_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/glass_dp_12"
            android:minHeight="@dimen/glass_dp_32"
            android:text="@string/h_glass_219"
            android:lineSpacingExtra="@dimen/glass_dp_2"
            android:layout_marginStart="@dimen/glass_dp_24"
            android:layout_marginEnd="@dimen/glass_dp_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_goneMarginTop="@dimen/glass_dp_64"/>
        <TextView
            android:textColor="@color/g_white"
            android:gravity="center"
            android:id="@+id/tv_confirm"
            android:background="@drawable/bg_black_44_shape"
            android:layout_width="0dp"
            android:layout_height="@dimen/glass_dp_50"
            android:layout_marginTop="@dimen/glass_dp_12"
            android:text="@string/h_glass_220"
            android:layout_marginStart="@dimen/glass_dp_32"
            android:layout_marginEnd="@dimen/glass_dp_32"
            app:layout_constraintBottom_toTopOf="@+id/tv_cancel"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_content"
            app:layout_goneMarginBottom="@dimen/glass_dp_32"/>
        <TextView
            android:textColor="@color/g_black"
            android:gravity="center"
            android:id="@+id/tv_cancel"
            android:background="@drawable/bg_black_44_stroke_shape"
            android:layout_width="0dp"
            android:layout_height="@dimen/glass_dp_50"
            android:layout_marginTop="@dimen/glass_dp_12"
            android:layout_marginBottom="@dimen/glass_dp_32"
            android:text="@string/h_glass_221"
            android:layout_marginStart="@dimen/glass_dp_32"
            android:layout_marginEnd="@dimen/glass_dp_32"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_confirm"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
