<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/g_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_bar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_direction"
                android:background="@drawable/main_setting_bg"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="@dimen/glass_dp_70"
                android:layout_marginTop="@dimen/glass_dp_20"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_common_1"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/h_glass_206"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/glass_dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_12"
                    android:textColor="@color/g_color_7"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_100"
                    android:text="@string/h_glass_209"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/glass_dp_10"
                    android:layout_marginEnd="@dimen/glass_sp_16"
                    app:drawableEndCompat="@mipmap/ic_enter_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_duration"
                android:background="@drawable/main_setting_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/glass_dp_70"
                android:layout_marginTop="@dimen/glass_dp_10"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintTop_toBottomOf="@+id/csl_direction">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_common_1"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/h_glass_207"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/glass_dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_12"
                    android:textColor="@color/g_color_7"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_100"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/glass_dp_10"
                    android:layout_marginEnd="@dimen/glass_sp_16"
                    app:drawableEndCompat="@mipmap/ic_enter_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/csl_duration_audio"
                android:background="@drawable/main_setting_bg"
                android:layout_width="match_parent"
                android:layout_height="@dimen/glass_dp_70"
                android:layout_marginTop="@dimen/glass_dp_10"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintTop_toBottomOf="@+id/csl_duration">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_common_1"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_200"
                    android:text="@string/h_glass_207_1"
                    android:singleLine="true"
                    android:layout_marginStart="@dimen/glass_dp_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textSize="@dimen/glass_sp_12"
                    android:textColor="@color/g_color_7"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:id="@+id/tv_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxWidth="@dimen/glass_dp_100"
                    android:singleLine="true"
                    android:drawablePadding="@dimen/glass_dp_10"
                    android:layout_marginEnd="@dimen/glass_sp_16"
                    app:drawableEndCompat="@mipmap/ic_enter_gray"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
