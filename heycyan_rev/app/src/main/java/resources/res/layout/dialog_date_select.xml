<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent"
    android:padding="@dimen/glass_dp_16"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/dialog_view"
        android:background="@drawable/main_setting_bg"
        android:paddingBottom="@dimen/glass_dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/glass_dp_540"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textSize="@dimen/glass_sp_18"
            android:textColor="@color/g_white"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/glass_dp_20"
            android:text="@string/h_glass_199"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_close"
            android:padding="@dimen/glass_dp_4"
            android:layout_width="@dimen/glass_dp_24"
            android:layout_height="@dimen/glass_dp_24"
            android:layout_marginTop="@dimen/glass_dp_22"
            android:src="@mipmap/ic_dialog_close_white"
            android:contentDescription="@string/app_image_desc"
            android:layout_marginStart="@dimen/glass_dp_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/iv_confirm"
            android:padding="@dimen/glass_dp_4"
            android:layout_width="@dimen/glass_dp_26"
            android:layout_height="@dimen/glass_dp_26"
            android:layout_marginTop="@dimen/glass_dp_22"
            android:src="@mipmap/ic_dialog_confirm_white"
            android:contentDescription="@string/app_image_desc"
            android:layout_marginEnd="@dimen/glass_dp_16"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:background="@drawable/bg_blue_44_shape"
            android:layout_width="0dp"
            android:layout_height="@dimen/glass_dp_48"
            app:layout_constraintBottom_toBottomOf="@+id/date_wheel"
            app:layout_constraintLeft_toLeftOf="@+id/date_wheel"
            app:layout_constraintRight_toRightOf="@+id/date_wheel"
            app:layout_constraintTop_toTopOf="@+id/date_wheel"/>
        <com.glasssutdio.wear.all.view.DateWheelView
            android:id="@+id/date_wheel"
            android:layout_width="0dp"
            android:layout_height="@dimen/glass_dp_250"
            android:layout_marginTop="@dimen/glass_dp_64"
            android:layout_marginStart="@dimen/glass_dp_20"
            android:layout_marginEnd="@dimen/glass_dp_20"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
