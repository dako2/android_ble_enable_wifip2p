<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/g_bg_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include
        android:id="@+id/title"
        layout="@layout/layout_title_bar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/glass_dp_6"
        app:layout_constraintTop_toBottomOf="@+id/title">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="@dimen/glass_dp_90"
                android:layout_height="@dimen/glass_dp_90"
                android:layout_marginTop="@dimen/glass_dp_72"
                android:src="@mipmap/app_icon"
                android:contentDescription="@string/app_name"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/glass_sp_24"
                android:textColor="@color/g_white"
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_32"
                android:text="@string/app_name"
                app:layout_constraintLeft_toLeftOf="@+id/iv_logo"
                app:layout_constraintRight_toRightOf="@+id/iv_logo"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo"/>
            <TextView
                android:textSize="@dimen/glass_sp_14"
                android:textColor="@color/color_A8A8A8"
                android:id="@+id/tv_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_6"
                android:text="@string/h_glass_275"
                app:layout_constraintLeft_toLeftOf="@+id/tv_title"
                app:layout_constraintRight_toRightOf="@+id/tv_title"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cls_check_update"
                android:background="@drawable/main_setting_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_40"
                android:minHeight="@dimen/glass_dp_60"
                android:layout_marginStart="@dimen/glass_dp_18"
                android:layout_marginEnd="@dimen/glass_dp_18"
                app:layout_constraintTop_toBottomOf="@+id/tv_version">
                <TextView
                    android:textSize="@dimen/glass_sp_14"
                    android:textColor="@color/g_color_6"
                    android:id="@+id/tv_about"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h_glass_276"
                    android:drawablePadding="@dimen/glass_dp_12"
                    android:layout_marginStart="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <ImageView
                    android:id="@+id/iv_new"
                    android:layout_width="@dimen/glass_dp_4"
                    android:layout_height="@dimen/glass_dp_4"
                    android:src="@drawable/red_point_shape"
                    android:contentDescription="@string/app_image_desc"
                    android:layout_marginStart="@dimen/glass_dp_8"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_about"
                    app:layout_constraintLeft_toRightOf="@+id/tv_about"
                    app:layout_constraintTop_toTopOf="@+id/tv_about"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_enter_gray"
                    android:contentDescription="@string/app_image_desc"
                    android:layout_marginEnd="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/glass_dp_50"
        app:layout_constraintBottom_toBottomOf="parent">
        <TextView
            android:textSize="@dimen/glass_sp_14"
            android:textColor="@color/color_click"
            android:id="@+id/tv_agreement"
            android:paddingTop="@dimen/glass_dp_10"
            android:paddingBottom="@dimen/glass_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/glass_dp_180"
            android:text="@string/h_glass_277"/>
        <View
            android:background="@color/g_white"
            android:layout_width="0.6dp"
            android:layout_height="@dimen/glass_dp_12"
            android:layout_marginStart="@dimen/glass_dp_8"
            android:layout_marginEnd="@dimen/glass_dp_8"/>
        <TextView
            android:textSize="@dimen/glass_sp_14"
            android:textColor="@color/color_click"
            android:id="@+id/tv_policy"
            android:paddingTop="@dimen/glass_dp_10"
            android:paddingBottom="@dimen/glass_dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="@dimen/glass_dp_180"
            android:text="@string/h_glass_278"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
