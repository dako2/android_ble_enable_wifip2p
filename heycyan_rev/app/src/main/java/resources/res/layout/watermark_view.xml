<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/ll_root"
        android:background="@color/g_white"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/glass_dp_60"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/app_name_icon_black"
            android:contentDescription="@string/app_name"
            android:layout_marginStart="@dimen/glass_dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="@dimen/glass_dp_30"
            android:layout_height="@dimen/glass_dp_30"
            android:src="@mipmap/ic_album_logo"
            android:contentDescription="@string/app_image_desc"
            android:layout_marginEnd="@dimen/glass_dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/view_line"
            app:layout_constraintTop_toTopOf="parent"/>
        <View
            android:id="@+id/view_line"
            android:background="@color/g_album_text_5"
            android:layout_width="0.5dp"
            android:layout_height="@dimen/glass_dp_12"
            android:layout_marginEnd="@dimen/glass_dp_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_time"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/glass_sp_10"
                android:textColor="@color/black"
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/album_glass_32"
                android:layout_marginEnd="@dimen/glass_dp_20"
                app:layout_constraintBottom_toTopOf="@+id/tv_time"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed"/>
            <TextView
                android:textSize="@dimen/glass_sp_10"
                android:textColor="@color/color_757575"
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_6"
                android:text="111"
                android:layout_marginEnd="@dimen/glass_dp_20"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_name"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
