<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@mipmap/ic_login_page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:textSize="@dimen/glass_sp_14"
        android:textColor="@color/color_click"
        android:id="@+id/tv_skip"
        android:padding="@dimen/glass_dp_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/h_glass_166"
        android:layout_marginEnd="@dimen/glass_dp_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="@dimen/glass_dp_6"
        app:layout_constraintBottom_toTopOf="@+id/ll_bottom"
        app:layout_constraintTop_toBottomOf="@+id/tv_skip">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_app_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_22"
                android:src="@mipmap/app_name_icon_dark"
                android:contentDescription="@string/app_image_desc"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/ll_account"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_48"
                android:layout_marginStart="@dimen/glass_dp_14"
                android:layout_marginEnd="@dimen/glass_dp_14"
                app:layout_constraintTop_toBottomOf="@+id/iv_app_name">
                <TextView
                    android:textSize="@dimen/glass_sp_16"
                    android:textColor="@color/color_2E3032"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h_glass_287"/>
                <EditText
                    android:textSize="@dimen/glass_sp_16"
                    android:textColor="@color/color_2E3032"
                    android:textColorHint="@color/g_et_hint_color"
                    android:gravity="start|center_vertical"
                    android:id="@+id/et_account"
                    android:background="@drawable/bg_white_10_shape"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/glass_dp_60"
                    android:layout_marginTop="@dimen/glass_dp_8"
                    android:hint="@string/h_glass_288"
                    android:singleLine="true"
                    android:inputType="text"
                    android:paddingStart="@dimen/glass_dp_18"
                    android:paddingEnd="@dimen/glass_dp_18"
                    android:layout_marginStart="@dimen/glass_dp_2"
                    android:layout_marginEnd="@dimen/glass_dp_2"
                    android:importantForAutofill="no"/>
            </LinearLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:orientation="vertical"
                android:id="@+id/ll_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_18"
                android:layout_marginStart="@dimen/glass_dp_14"
                android:layout_marginEnd="@dimen/glass_dp_14"
                app:layout_constraintTop_toBottomOf="@+id/ll_account">
                <TextView
                    android:textSize="@dimen/glass_sp_16"
                    android:textColor="@color/color_2E3032"
                    android:id="@+id/tv_pwd_hint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/h_glass_299"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <EditText
                    android:textSize="@dimen/glass_sp_16"
                    android:textColor="@color/color_2E3032"
                    android:textColorHint="@color/g_et_hint_color"
                    android:id="@+id/et_pwd"
                    android:background="@drawable/bg_white_10_shape"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/glass_dp_60"
                    android:layout_marginTop="@dimen/glass_dp_8"
                    android:text=""
                    android:hint="@string/h_glass_296"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    android:textDirection="locale"
                    android:textAlignment="viewStart"
                    android:paddingStart="@dimen/glass_dp_18"
                    android:paddingEnd="@dimen/glass_dp_58"
                    android:layout_marginStart="@dimen/glass_dp_2"
                    android:layout_marginEnd="@dimen/glass_dp_2"
                    android:importantForAutofill="no"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_pwd_hint"/>
                <ImageView
                    android:id="@+id/iv_see_pwd"
                    android:paddingTop="@dimen/glass_dp_12"
                    android:paddingBottom="@dimen/glass_dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_pwd_close"
                    android:contentDescription="@string/app_image_desc"
                    android:paddingStart="@dimen/glass_dp_4"
                    android:paddingEnd="@dimen/glass_dp_4"
                    android:layout_marginEnd="@dimen/glass_dp_20"
                    app:layout_constraintBottom_toBottomOf="@+id/et_pwd"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/et_pwd"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <FrameLayout
                android:id="@+id/fl_code_view"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_82"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_app_name">
                <include
                    android:id="@+id/code_view"
                    layout="@layout/set_code_view"/>
            </FrameLayout>
            <TextView
                android:enabled="false"
                android:textSize="@dimen/glass_sp_18"
                android:textColor="@color/g_white"
                android:gravity="center"
                android:id="@+id/tv_login"
                android:background="@drawable/bg_login_btn_selector"
                android:layout_width="0dp"
                android:layout_height="@dimen/glass_dp_60"
                android:layout_marginTop="@dimen/glass_dp_80"
                android:layout_marginBottom="@dimen/glass_dp_12"
                android:text="@string/h_glass_289"
                android:layout_marginStart="@dimen/glass_dp_16"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ll_pwd"
                app:layout_goneMarginTop="@dimen/glass_dp_120"/>
            <TextView
                android:textSize="@dimen/glass_sp_18"
                android:textColor="@color/color_click"
                android:gravity="end"
                android:id="@+id/tv_switch_login"
                android:paddingTop="@dimen/glass_dp_4"
                android:paddingBottom="@dimen/glass_dp_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/glass_dp_12"
                android:layout_marginBottom="@dimen/glass_dp_120"
                android:maxWidth="@dimen/glass_dp_120"
                android:text="@string/h_glass_290"
                android:layout_marginStart="@dimen/glass_dp_16"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@+id/iv_divider"
                app:layout_constraintTop_toBottomOf="@+id/tv_login"/>
            <ImageView
                android:id="@+id/iv_divider"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_login_divider"
                android:contentDescription="@string/app_image_desc"
                android:layout_marginStart="@dimen/glass_sp_16"
                android:layout_marginEnd="@dimen/glass_sp_16"
                app:layout_constraintBottom_toBottomOf="@+id/tv_switch_login"
                app:layout_constraintLeft_toRightOf="@+id/tv_switch_login"
                app:layout_constraintRight_toLeftOf="@+id/tv_forget_pwd"
                app:layout_constraintTop_toTopOf="@+id/tv_switch_login"/>
            <TextView
                android:textSize="@dimen/glass_sp_18"
                android:textColor="@color/color_click"
                android:id="@+id/tv_forget_pwd"
                android:paddingTop="@dimen/glass_dp_4"
                android:paddingBottom="@dimen/glass_dp_4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/glass_dp_128"
                android:maxWidth="@dimen/glass_dp_120"
                android:text="@string/h_glass_295"
                android:layout_marginEnd="@dimen/glass_dp_16"
                app:layout_constraintLeft_toRightOf="@+id/iv_divider"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_switch_login"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">
        <ImageView
            android:id="@+id/iv_checked"
            android:padding="@dimen/glass_dp_6"
            android:layout_width="@dimen/glass_dp_30"
            android:layout_height="@dimen/glass_dp_30"
            android:src="@mipmap/ic_checked_off_gray"
            android:contentDescription="@string/app_image_desc"
            android:layout_marginStart="@dimen/glass_dp_26"
            app:layout_constraintBottom_toBottomOf="@+id/tv_agreement"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/tv_agreement"
            app:layout_constraintTop_toTopOf="@+id/tv_agreement"/>
        <TextView
            android:textSize="@dimen/glass_sp_14"
            android:textColor="@color/g_color_7"
            android:id="@+id/tv_agreement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/glass_dp_2"
            android:maxWidth="@dimen/glass_dp_350"
            android:text="@string/h_glass_291"
            android:maxLines="3"
            android:drawablePadding="@dimen/glass_dp_6"
            android:layout_marginEnd="@dimen/glass_dp_26"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_checked"
            app:layout_constraintRight_toRightOf="parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
