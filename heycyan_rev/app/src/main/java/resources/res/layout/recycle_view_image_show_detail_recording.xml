<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.glasssutdio.wear.all.view.PcmWaveformView
        android:id="@+id/wave_view"
        android:background="@color/g_album_record"
        android:layout_width="match_parent"
        android:layout_height="@dimen/glass_dp_200"
        android:layout_marginBottom="@dimen/glass_dp_40"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/iv_play_recording"
        android:padding="@dimen/glass_dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_8"
        android:src="@drawable/bg_record_play_selector"
        android:contentDescription="@string/app_image_desc"
        android:layout_marginStart="@dimen/glass_dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_view"/>
    <ImageView
        android:id="@+id/iv_sound_recording"
        android:padding="@dimen/glass_dp_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/glass_dp_8"
        android:layout_marginBottom="@dimen/glass_dp_8"
        android:src="@drawable/bg_video_sound_selector"
        android:contentDescription="@string/app_image_desc"
        android:layout_marginEnd="@dimen/glass_dp_12"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wave_view"/>
    <SeekBar
        android:id="@+id/pb_progress_recording"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxHeight="@dimen/glass_dp_6"
        android:max="100"
        android:progress="10"
        android:progressDrawable="@drawable/seek_bar_white"
        android:minHeight="@dimen/glass_dp_6"
        android:thumb="@drawable/custom_thumb"
        android:paddingStart="@dimen/glass_dp_6"
        android:paddingEnd="@dimen/glass_dp_6"
        app:layout_constraintBottom_toBottomOf="@+id/iv_play_recording"
        app:layout_constraintLeft_toRightOf="@+id/tv_start_recording"
        app:layout_constraintRight_toLeftOf="@+id/tv_end_recording"
        app:layout_constraintTop_toTopOf="@+id/iv_play_recording"/>
    <TextView
        android:textSize="@dimen/glass_sp_12"
        android:textColor="@color/g_album_text_2"
        android:id="@+id/tv_start_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginStart="@dimen/glass_dp_2"
        app:layout_constraintBottom_toBottomOf="@+id/iv_play_recording"
        app:layout_constraintLeft_toRightOf="@+id/iv_play_recording"
        app:layout_constraintTop_toTopOf="@+id/iv_play_recording"/>
    <TextView
        android:textSize="@dimen/glass_sp_12"
        android:textColor="@color/g_album_text_2"
        android:id="@+id/tv_end_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/iv_sound_recording"
        app:layout_constraintRight_toLeftOf="@+id/iv_sound_recording"
        app:layout_constraintTop_toTopOf="@+id/iv_sound_recording"/>
    <TextView
        android:textSize="@dimen/glass_sp_30"
        android:textColor="@color/g_album_text_2"
        android:id="@+id/tv_current_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/glass_dp_16"
        app:layout_constraintBottom_toTopOf="@+id/wave_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
